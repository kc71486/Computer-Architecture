.PHONY: clean

include toolchain.mk

OLVL := -O0
ABIFLAGS := -march=rv32i_zicsr -mabi=ilp32
CFLAGS := -Wall -Wextra $(OLVL)
LDFLAGS := -T link.ld

OBJS = \
    main.o \
    cycles.o \
    print.o \
    convert.o \
    hammingc.o \
    hammings.o

BIN = hammingdistance.elf

%.o: %.s
	$(CROSS_COMPILE)as $(ABIFLAGS) -c -o $@ $<

%.o: %.c
	$(CROSS_COMPILE)gcc $(GCCFLAGS) $(ABIFLAGS) $(CFLAGS) -c -o $@ $<

all: $(BIN)

$(BIN): $(OBJS)
	$(CROSS_COMPILE)ld $(LDFLAGS) -o $@ $^

clean:
	$(RM) $(BIN) $(OBJS)
